@charset "UTF-8"
@import "vendor/normalize"

@import "fonts"
@import "colors"
@import "transitions"

// Rounded corners things
border-radius()
  -webkit-border-radius arguments
  border-radius arguments

// ----------------------------------------------------------------------------
// Common styles

pre, code
  font-family monospace
  font-size 1em
  line-height: 1.4em

a, a:visited, a:hover, a:focus, a:active
  color $linkColor
  text-decoration none
  border-bottom 1px $linkBorderColor dotted

a:hover
  color lighten($linkColor, 20)
  border-bottom 1px $linkBorderColor solid

.date
  color $articleHeaderColor
  font-family "et-bembo", serif
  font-size 0.7em

h1, h2, h3
  font-family "et-bembo", serif
  color $titlesColor
  text-shadow 0 1px 4px #000
  font-style italic

h1
  font-size 1.3em
  border-top 1px darken($titlesBorderColor, 2) solid

h2
  font-size 1.2em

h3
  font-size 1em

hr
  border-top none
  border-left none
  border-right none
  border-bottom 1px $separatorBorderColor solid

// Pseudo-responsive layout...
@import "layout-default"
@media all and (max-width: 699px) {
  @import "layout-small"
}

// Logo style
#logo
  color #fff
  font-family "Open Sans", sans-serif
  font-size 10px
  line-height 8px
  text-transform uppercase
  letter-spacing 4px
  text-align center
  width 200px
  margin 0px auto 50px
  text-shadow 1px 1px 3px #888

  a
    color #fff
    border none

// Navigation
nav
  width 100%
  padding 2px
  font-family "Open Sans", sans-serif
  font-size 1em
  text-align center
  a
    border none
    padding 2px 4px
    transition all 0.2s ease-in
    text-transform uppercase
  a:hover
    border none
    text-shadow 0px 1px 6px #000

// Articles
@import "article"
