body
  font-family "Libertine", serif

pre, code
  font-family monospace
  font-size 1em
  line-height: 1.4em

a, a:visited, a:hover, a:focus, a:active
  color $linkColor
  text-decoration none
  border-bottom 1px $linkBorderColor dotted

a:hover
  color lighten($linkColor, 20)
  border-bottom 1px $linkBorderColor solid

.date
  color $articleHeaderColor
  font-size 0.7em

h1, h2, h3
  color $titlesColor
  text-shadow 0 1px 4px #000
  font-style italic

h1
  font-size 1.3em
  border-top 1px darken($titlesBorderColor, 2) solid

h2
  font-size 1.2em

h3
  font-size 1em

hr
  border-top none
  border-left none
  border-right none
  border-bottom 1px $separatorBorderColor solid
